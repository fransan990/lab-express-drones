<div class="col mt-5 mb-5">
    <div class="text-center display-3">List Drones</div>
</div>
<div class="col-12">
    <div class="row">

        {{#each drones}}
        <div class="col-12 p-4 border border-1 border-dark">
            <div class="row">
                <div class="col-12 text-center mb-4">
                    <h4 class="w-50 bg-dark m-0 m-auto mb-3 text-white">Name</h4>
                    {{name}}
                </div>
                <div class="col-12 text-center mb-4">
                    <h4 class="w-50 bg-dark m-0 m-auto mb-3 text-white">propellers</h4>
                    {{propellers}}
                </div>
                <div class="col-12 text-center mb-4">
                    <h4 class="w-50 bg-dark m-0 m-auto mb-3 text-white">maxSpeed</h4>
                    {{maxSpeed}}
                </div>
                <div class="col-12 text-center mb-4 ">

                </div>
                <div class="col-12 mt-5 mb-5">
                    <div class="row">
                        <div class="col-6 text-center p-3">
                            <a href="/drones/{{id}}/edit" class="bg-primary p-2">Edit <i
                                    class="bi bi-pencil-square mx-3"></i></a>
                        </div>
                        <div class="col-6 text-center">
                            <form action="/drones/{{_id}}/delete" method="POST">
                                <button class="btn btn-sm btn-warning" type="submit">Eliminar</button>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        {{/each}}


        <div class="col-12 mt-5">
            <div class="row">
                <div class="col-6 text-end p-3">
                    <a href="/" class="bg-info p-4">Back to menu</a>
                </div>
                <div class="col-6 text-start p-3">
                    <a href="/drones/create" class="bg-success p-3">New Drone <i
                            class="bi bi-plus-circle-fill mx-3"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>